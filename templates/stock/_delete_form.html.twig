<form class="form-inline" id="row{{stock.id}}" method="post" action="{{ path('repository_stock_delete', {'id': stock.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stock.id) }}">
    <a class="page-link mb-3" href="#" onclick="delete_item('row{{stock.id}}')"><span data-feather='trash-2' ></span></a>
</form>
