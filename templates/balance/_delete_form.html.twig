<form class="form-inline" id="row{{balance.id}}" method="post" action="{{ path('portfolio_balance_delete', {'id': balance.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ balance.id) }}">
    <a href="#" onclick="delete_item('row{{balance.id}}')"><span data-feather='trash-2' ></span></a>
</form>
