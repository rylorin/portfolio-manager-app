{% extends 'base.html.twig' %}

{% block title %}{{ balance.currency }} Balance{% endblock title %}

{% block body %}
<div class="row">
  <div class="col-12 col-sm-6">
    <h4>Balance {{ balance.id }}</h4>
    <table class="table">
        <tbody>
            <tr>
                <th>Currency</th>
                <td>{{ balance.currency }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ balance.quantity }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('portfolio_balances_index', {'id': balance.portfolio.id}) }}"><span data-feather="arrow-left"></span></a>
    <a href="{{ path('portfolio_balance_edit', {'id': balance.id}) }}"><span data-feather="edit-2"></span></a>
    {{ include('balance/_delete_form.html.twig') }}
  </div>
</div>
{% endblock body %}
