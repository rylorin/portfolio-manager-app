{% extends 'base.html.twig' %}

{% block title %}Currency {{ currency.id }}{% endblock %}

{% block body %}
<div class="row">
  {% set item_size='col-sm-6' %}
  <div class="{{ col_style }}">
      <table class="table">
          <tbody>
              <tr>
                  <th>Base</th>
                  <td>{{ currency.base }}</td>
              </tr>
              <tr>
                  <th>Currency</th>
                  <td>{{ currency.currency }}</td>
              </tr>
              <tr>
                  <th>Rate</th>
                  <td>{{ currency.rate }}</td>
              </tr>
          </tbody>
      </table>
    <nav><ul class="pagination">
        <li class="page-item"><a class="page-link mb-3" href="{{ path('repository_currency_index') }}"><span data-feather="arrow-left"></span></a></li>
        <li class="page-item"><a class="page-link mb-3" href="{{ path('repository_currency_edit', {'id': currency.id}) }}"><span data-feather="edit-2"></span></a></li>
        <li class="page-item">{{ include('currency/_delete_form.html.twig') }}</li>
    </ul></nav>
    </div>
</div>
{% endblock %}
