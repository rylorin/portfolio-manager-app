{% extends 'base.html.twig' %}

{% block title %}Exchange index{% endblock %}

{% block body %}
    <h1>Exchange index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exchange in exchanges %}
            <tr>
                <td>{{ exchange.id }}</td>
                <td>{{ exchange.name }}</td>
                <td>
                    <a href="{{ path('exchange_show', {'id': exchange.id}) }}">show</a>
                    <a href="{{ path('exchange_edit', {'id': exchange.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('exchange_new') }}">Create new</a>
{% endblock %}
